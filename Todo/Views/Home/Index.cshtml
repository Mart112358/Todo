@{
    ViewBag.Title = "Todos";
}

<div class="container-fluid">
    <h2>Todo</h2>
    <div ng-controller="TodoCtrl">
        <span>{{remaining()}} of {{todos.length}} remaining</span>
        [ <a href="" ng-click="archive()">archive</a> ]
        <ul class="unstyled">
            <li ng-repeat="todo in todos">
                <input type="checkbox" ng-model="todo.Done">
                <span class="done-{{todo.Done}}">{{todo.Description}}</span>
            </li>
        </ul>
        <form ng-submit="addTodo()">            
            <div class="controls">
                <div class="input-append">
                    <input type="text" ng-model="todoText" placeholder="add new todo here"><button class="btn" type="submit">Add</button>
                </div>                
            </div>
        </form>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/app/helper.js"></script>
    <script src="~/Scripts/app/controller.js"></script>
}
